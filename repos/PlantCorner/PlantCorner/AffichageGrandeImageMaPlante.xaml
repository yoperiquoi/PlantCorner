<Window x:Class="PlantCorner.AffichageGrandeImageMaPlante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantCorner"
        mc:Ignorable="d"
        Title="AffichageGrandeImage" Height="500" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Image Source="{Binding Illustration}" Width="400" Height="400"/>
        <Button Height="50" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click" Background="Transparent" BorderBrush="Transparent">
            <Button.Content>
                <Image Source="Img/IconeSuppr.jpg"/>
            </Button.Content>
        </Button>
    </Grid>
</Window>

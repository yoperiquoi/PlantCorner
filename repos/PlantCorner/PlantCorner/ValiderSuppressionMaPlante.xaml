<Window x:Class="PlantCorner.ValiderSuppressionMaPlante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantCorner"
        mc:Ignorable="d"
        Title="ValiderSuppressionMaPlante" Height="150" Width="310"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Border Grid.Column="1" Grid.Row="1" Margin="3"  CornerRadius="15" Background="Gainsboro" BorderThickness="2" Padding="3" BorderBrush="Black" Width="300" Height="120">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Confirmez-vous la suppression ?" TextAlignment="Center" Margin="10" FontSize="18" Foreground="Black"/>
            <StackPanel Orientation="Horizontal">
                <Button Background="Green" BorderBrush="Black" Content="Oui" Width="100" Height="40" Margin="25,10,20,0" Click="Accepter_Click"/>
                <Button Background="Red" BorderBrush="Black" Content="Non" Width="100" Height="40" Margin="20,10,20,0" Click="Refuser_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
